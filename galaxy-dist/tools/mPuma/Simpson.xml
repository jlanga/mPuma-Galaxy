<tool id="Simpson" name="Perform a Simpson test" version="0.0.1">
	<description>It performs a Simpson test using a BIOM file as input</description>

	<command interpreter="Rscript">Simpson.R $input > $output </command>
		
	<inputs>
		<param name="input" type="data" label="BIOM file"/>		
	</inputs>
	<outputs>
		<data format="text" name="output" />
	</outputs>
	
	<tests>
		<test>
			<param name="input" value="min_dense_otu_table.biom"/>
			<output name="output" file="min_dense_otu_table_simpson"/>
		</test>
<!-- 		 Add tests for min_sparse_otu_table.biom  rich_dense_otu_table.biom  rich_sparse_otu_table.biom -->
	</tests>

	<help>

	</help>
</tool>